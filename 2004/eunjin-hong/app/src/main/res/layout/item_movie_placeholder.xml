<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_item_height"
        android:layout_margin="@dimen/margin_1"
        android:background="#222222">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_1"
            android:background="@color/placeholder"
            app:layout_constraintBottom_toTopOf="@id/movie_pub_date" />

        <View
            android:id="@+id/movie_pub_date"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_margin="@dimen/margin_1"
            android:background="@color/placeholder"
            app:contentPaddingLeft="5dp"
            app:contentPaddingRight="5dp"
            app:layout_constraintBottom_toTopOf="@id/movie_subtitle"
            app:layout_constraintLeft_toLeftOf="parent" />

        <View
            android:id="@+id/movie_user_rating"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_margin="@dimen/margin_1"
            android:background="@color/placeholder"
            app:contentPaddingLeft="5dp"
            app:contentPaddingRight="5dp"
            app:layout_constraintBottom_toTopOf="@id/movie_subtitle"
            app:layout_constraintLeft_toRightOf="@id/movie_pub_date" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_staff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_1"
            android:background="@color/placeholder"
            app:layout_constraintBottom_toTopOf="@id/movie_subtitle"
            app:layout_constraintLeft_toRightOf="@id/movie_user_rating"
            app:layout_constraintRight_toRightOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/movie_subtitle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/margin_1"
            android:background="@color/placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>