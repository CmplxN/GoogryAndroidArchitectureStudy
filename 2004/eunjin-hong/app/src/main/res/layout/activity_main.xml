<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.MainActivity"
    tools:ignore="contentDescription, Autofill">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/query_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:defaultQueryHint="@string/movie_search_hint"
        app:layout_constraintTop_toTopOf="parent"
        app:goIcon="@android:drawable/ic_menu_search"
        app:iconifiedByDefault="false"
        app:queryHint="@string/movie_search_hint"
        app:searchIcon="@drawable/ic_movie" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/move_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_1"
        app:layout="@layout/item_movie"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/query_input"
        tools:itemCount="12"
        tools:layout_editor_absoluteX="8dp"
        tools:listitem="@layout/item_movie" />

    <TextView
        android:id="@+id/zero_item_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_0"
        android:text="@string/movie_list_zero_item_message"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/query_input" />

</androidx.constraintlayout.widget.ConstraintLayout>