<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="title"
            type="String" />

        <variable
            name="description"
            type="String" />

        <variable
            name="url"
            type="String" />

        <variable
            name="clickEvent"
            type="com.jay.architecturestudy.ui.OnItemClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:clickable="true"
        android:onClick="@{(v) -> clickEvent.onClick(v, url)}">

        <TextView
            android:id="@+id/kin_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textFromHtml="@{title}"
            android:ellipsize="end"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="규현이 보러 슈퍼쇼8 다녀왔어용" />

        <TextView
            android:id="@+id/kin_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textFromHtml="@{description}"
            android:maxLines="4"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kin_title"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="스포되는 건 다음에 올릴게용 특리더가 스포는 올리지말래서 ㅋㅋㅋ 여튼 조규현은 아이돌이었슴돠ㅜㅜ 규현이 몇년만에 아이돌로 돌아옴ㅜㅠㅜ 2016년이후로 아이돌로 무대 센터로 서있는거 보니ㅠㅠ 너무..." />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>