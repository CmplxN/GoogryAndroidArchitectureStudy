<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.hansung.firstproject.data.MovieModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingEnd="5dp">

        <ImageView
            android:id="@+id/posterimage_movieitem"
            loadUrl="@{item.image}"
            android:layout_width="200dp"
            android:layout_height="220dp"
            android:layout_weight="1"
            android:padding="5dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingEnd="5dp">

            <TextView
                android:id="@+id/title_movieitem"
                setTitle="@{item.title}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/grade_movieitem"
                style="@style/Widget.AppCompat.RatingBar.Small"
                setRating="@{item.userRating}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:numStars="5"
                android:progressTint="#E91E63"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/releasedate_movieitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@{item.pubDate}"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/director_movieitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@{item.director}"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/actor_movieitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@{item.actor}"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>
</layout>